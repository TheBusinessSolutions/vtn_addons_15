<odoo>

    <record id="stock_card_summary_wizard_location_form" model="ir.ui.view">
        <field name="name">stock.card.summary.wizard.location.form</field>
        <field name="model">stock.card.summary.wizard.location</field>
        <field name="arch" type="xml">
            <form>
                <group name="criteria">
                    <group name="dates" string="Dates">
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="generate_date" invisible="1"/>
                        <field name="create_uid" invisible="1"/>
                    </group>
                    <group name="company_product" string="Company">
                        <field name="company_id" options="{'no_create':True}"/>
                    </group>
                </group>
                <group name="warehouse_location" string="Warehouse/Location">
                    <group>
                        <field name="warehouse_ids" options="{'no_create':True}" widget="many2many_tags"/>
                    </group>
                     <group>
                        <field name="location_ids" options="{'no_create':True}" widget="many2many_tags"/>
                    </group>
                </group>
                <group string="Products">
                    <!-- <field name="filter_by"/>
                    <field name="category_id" attrs="{'invisible':[('filter_by','!=','category')],'required':[('filter_by','=','category')]}"/> -->
                    <field name="product_ids" widget="many2many_tags" domain="[('detailed_type','=','product')]" options="{'no_create':True, 'no_edit':True}"/>  
                </group>
                <footer>
                    <button
                        name="button_export_html"
                        string="View"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    or
                    <button
                        name="button_export_pdf"
                        string="Export PDF"
                        type="object"
                    />
                    or
                    <button
                        name="print_report_xlsx"
                        string="Export XLSX"
                        type="object"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="stock_card_summary_location_report_action" model="ir.actions.act_window">
        <field name="name">Stock Card Summary Location</field>
        <field name="res_model">stock.card.summary.wizard.location</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="stock_card_summary_location_report_menu"
        action="stock_card_summary_location_report_action"
        parent="stock.menu_warehouse_report"
        sequence="50" 
    /> 

</odoo>
